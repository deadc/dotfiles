#!/usr/bin/env bash

SCROT_PATH=${HOME}/photos/.screenshots

if [ ! -d ${SCROT_PATH} ] ; then
  mkdir -p ${SCROT_PATH}
fi

if [ "$1" = "cut" ] ; then
  sleep 0.2
  scrot -s ${SCROT_PATH}/'%Y-%m-%d_%H%M%S-$wx$h_scrot.png' -e 'xclip -selection clipboard -target image/png -i $f'
else
  scrot ${SCROT_PATH}/'%Y-%m-%d_%H%M%S-$wx$h_scrot.png'
fi
