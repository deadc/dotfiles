#!/usr/bin/env bash

SCROT_PATH=/tmp

if [ ! -d ${SCROT_PATH} ] ; then
  mkdir -p ${SCROT_PATH}
fi

if [ "$1" = "cut" ] ; then
  sleep 0.2
  scrot -s ${SCROT_PATH}/'screenshot-%Y-%m-%d_%H%M%S-$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'
else
  scrot ${SCROT_PATH}/'screenshot-%Y-%m-%d_%H%M%S-$wx$h.png'
fi
